              <% end %>
            </li>
            <li>
              <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
                <span class="btn d-flex flex-column"><strong style= color:#0b0b33;>Customers</strong><small style= color:#0b0b33;>会員一覧</small></span>
              <% end %>
            </li>
            <li>
