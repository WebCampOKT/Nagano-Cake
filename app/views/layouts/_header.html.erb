              <%= link_to customers_my_page_path, class: 'nav-link text-light' do %>
                <span class="btn d-flex flex-column"><strong style= color:#0b0b33;>MyPage</strong><small style= color:#0b0b33;>マイページ</small></span>
              <% end %>
            </li>
            <li>
              <%= link_to items_path, class: 'nav-link text-light' do %>
                <span class="btn d-flex flex-column"><strong style= color:#0b0b33;>Products</strong><small style= color:#0b0b33;>商品一覧</small></span>
              <% end %>
            </li>
            <li>
