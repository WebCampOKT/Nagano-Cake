            <li>
               <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                 <span class="btn d-flex flex-column"><strong style= color:#0b0b33;>Log out</strong><small style= color:#0b0b33;>ログアウト</small></span>
               <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to about_path, class: 'nav-link text-light' do %>
                <span class="btn d-flex flex-column"><strong style= color:#0b0b33;>About</strong><small style= color:#0b0b33;>概要</small></span>
