          <% end %>
        </ul>
        <div class="search_form">
          <% if admin_signed_in? %>
            <%= form_with url: admin_search_path, locol: true, method: :get do |f| %>
              <%= f.text_field :word %>
              <%= f.submit "検索", class: "btn-sm btn-primary" %>
            <% end %>
          <% else %>
            <%= form_with url: search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word %>
              <%= f.submit "検索", class: "btn-sm btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
