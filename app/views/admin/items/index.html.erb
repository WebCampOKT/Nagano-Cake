<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="mt-5"><span style="background: #FFEBD2;">商品一覧</span></h1>
      <div class="col-12">
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_sales ? '販売中' : '販売停止中' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>