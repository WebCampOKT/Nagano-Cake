<div class="container">
  <h4 class="mt-5"><span style="background: #FFEBD2;">商品詳細</span></h4>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-8">
      <table class="table mt-4">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.caption %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre_id %></td>
          </tr>
          <tr>
            <td>税込価格</br>（税抜価格）</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_sales ? '販売中' : '販売停止中' %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success mt-3 ml-5 px-4 py-2" %>
    </div>
  </div>
</div>