<%= form_with model: [:admin, item] do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :image, "商品画像", class: "col-4 col-form-label" %>
    <%= f.file_field :image, class: "btn" %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "商品名", class: "col-4 col-form-label" %>
    <%= f.text_field :name, class: "col-7 form-control", placeholder: "商品名" %>
  </div>
  <div class="form-group row">
    <%= f.label :caption, "商品説明", class: "col-4 col-form-label" %>
    <%= f.text_area :caption, class: "col-7 form-control", placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="form-group row">
    <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
    <%= f.select :genre_id, genres,{},{class: "form-select"} %>
  </div>
  <div class="form-group row">
    <%= f.label :price, "税抜価格", class: "col-4 col-form-label" %>
    <%= f.text_field :price, class: "col-7 form-control", placeholder: "1000" %>円
  </div>
  <div class="form-group row">
    <%= f.label :is_sales, "販売ステータス", class: "col-4 col-form-label" %>
    <%= f.radio_button :is_sales, :true %>
    <%= f.label :is_sales, "販売中" %>
    <%= f.radio_button :is_sales, :false %>
    <%= f.label :is_sales, "販売停止中" %>
  </div>
  <div class="form-group text-center">
    <% if request.path_info == new_admin_item_path %>
      <%= f.submit "新規登録", class: "btn btn-outline-seondary px-4 py-2" %>
    <% else %>
      <%= f.submit "変更を保存", class: "btn btn-outline-seondary px-4 py-2" %>
    <% end %>
  </div>
<% end %>