<div class="container mt-4">
  <div class="col-md-12">
    <h2 class="px-4 mb-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
    <table class="table table-borderless">
      <tr>
        <td class="col-md-2">会員ID</td>
        <td class="col-md-5"><%= @customer.id %></td>
      </tr>
      <tr>
        <td class="col-md-2">氏名</td>
        <td class="col-md-5"><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="col-md-2>">フリガナ</td>
        <td class="col-md-5"><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td>
      </tr>
       <tr>
        <td class="col-md-2>">郵便番号</td>
        <td class="col-md-5"><%= @customer.postal_code %></td>
      </tr>
       <tr>
        <td class="col-md-2>">住所</td>
        <td class="col-md-5"><%= @customer.address %></td>
      </tr>
       <tr>
        <td class="col-md-2>">電話番号</td>
        <td class="col-md-5"><%= @customer.phone_number %></td>
      </tr>
       <tr>
        <td class="col-md-2>">メールアドレス</td>
        <td class="col-md-5"><%= @customer.email %></td>
      </tr>
       <tr>
        <td class="col-md-2>">会員ステータス</td>
        <td class="col-md-5"></td>
      </tr>
      <tr>
        <td></td>
        <td class="col-md-5">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success' %>&emsp;
          <%= link_to "注文履歴一覧を見る", admin_customers_path, class: 'btn btn-primary' %>
        </td>
      </tr>
    </table>
  </div>
</div>