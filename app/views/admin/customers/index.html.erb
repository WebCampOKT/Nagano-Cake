<div class="container mt-4 pb-4">
  <div class="col-md-12">
    <h4 class="mb-5 ml-5"><span style="background: #FFEBD2;">会員一覧</span></h4>

    <table class="table col-md-10 text-center">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <% if customer.is_active == true %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="">無効</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>