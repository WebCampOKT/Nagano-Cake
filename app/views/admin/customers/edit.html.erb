<div class="container mt-4">
  <h4 class="px-4 mb-4"><span style="background: #FFEBD2;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>

  <div class="row mb-4 ">
    <label class="col-lg-3">会員ID</label>
    <div class="col-lg-4">
      <%= @customer.id %>
    </div>
  </div>

  <%= form_with model: [:admin, @customer] do |f| %>
  <div class="row mb-4">
    <label class="col-lg-3">名前</label>
    <div class="col-lg-4">
      <%= f.text_field :last_name, size: 30 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :first_name, size: 30 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">フリガナ</label>
    <div class="col-lg-4">
      <%= f.text_field :last_name_kana,size: 30 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :first_name_kana, size: 30 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">メールアドレス</label>
    <div class="col-lg-4">
      <%= f.email_field :email, size: 30 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">郵便番号（ハイフンなし）</label>
    <div class="col-lg-4">
      <%= f.text_field :postal_code, size: 30 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">住所</label>
    <div class="col-lg-4">
      <%= f.text_field :address, size: 85 %>
    </div>
  </div>

  <div class="row mb-4">
    <label class="col-lg-3">電話番号（ハイフンなし）</label>
    <div class="col-lg-4">
      <%= f.text_field :phone_number, size: 30 %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-4">
      <%= f.submit "編集内容を保存", class: 'btn btn-success w-75' %>
    </div>
  </div>
  <% end %>

</div>