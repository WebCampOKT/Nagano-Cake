<div class="container mt-5 pb-5">
  <div class="col-md-12">
    <h4 class="mb-3 ml-5"><span style="background: #FFEBD2;">注文履歴一覧</span></h4>

    <table class="table col-md-10 text-center">
  　　<thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders. each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= l order.created_at %>
            <% end %>
          </td>
          <td>
            <%= order.customer.last_name %>&ensp;
            <%= order.customer.first_name %>
          </td>
          <td>
            <%= order.order_details.sum(:quantity) %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>
