<div class="container">
  <div class="row justify-content-between">
    <div class="col-4 mt-5">
      <h4><span style="background: #FFEBD2;">商品一覧</span></h4>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="">無効</p>
              <% end %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>