<div class="container mt-4 pb-4">
  <div class="col-md-12">
    <h4 class="px-4 mb-4"><span style="background: #FFEBD2;"><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</span></h4>
    <table class="table col-md-10 mb-5 text-center">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= l order.created_at %>
            <% end %>
          </td>
          <td>
            <%= order.order_details.sum(:quantity) %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>