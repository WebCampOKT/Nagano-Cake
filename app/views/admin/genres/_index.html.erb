<table class="border border-dark" style="width: 170px;height: 200px;">
  <thead class="border border-dark">
    <tr class="text-center">
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr class="d-flex align-items-start">
        <td class="mb-3"><%= link_to genre.name, items_path(@genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>