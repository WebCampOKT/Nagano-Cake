<div class="container">
  <h3 class="mt-3 mb-3">ジャンル一覧・追加</h3>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="my-4 form-group row">
        <%= f.label :name, "ジャンル名", class: "col-3 col-form-label text-center" %>
        <%=f.text_field :name, class: 'form-control', class: "col-3 form-control", placeholder: "ジャンル名" %>
        <div class="ml-3">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-3 mt-5">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>