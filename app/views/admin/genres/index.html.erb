<div class="container">
  <h3 class="mt-3 mb-3">ジャンル一覧・追加</h3>
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <form class="form-inline">
          <div class="form-group">
            <%= f.label :name, "ジャンル名" %>
            <%=f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        </form>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4"><%= render 'index' %></div>
  </div>
</div>