<div class="container">
  <h4 class="my-5">ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mb-5">
      <label class="col-md-2">ジャンル名</label>
        <div class="col-md-3">
          <%=f.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
        </div>
        <div class="col-md-4">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  <div class="row">
    <table class='table table-hover table-inverse col-md-3'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-4"><%= render 'index' %></div>