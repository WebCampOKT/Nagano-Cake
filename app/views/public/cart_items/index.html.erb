<div class="container">
  <div class="row justify-content-between">
    <div class="col-4 mt-5">
      <h4><span style="background: #FFEBD2;">ショッピングカート</span></h4>
    </div>
    <div class="col-4 mt-4 text-right">
      <% if @cart_items.present? %>
        <%= link_to "カートを空にする", clear_cart_items_path, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
  <div class="row mb-5">
    <% if current_customer.cart_items.present? %>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.get_image(60,60), class: "mr-4" %><%= cart_item.item.name %></td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                  <%= f.number_field :quantity, min: 1, max:10 %>
                  <%= f.submit "変更",class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      カートに商品がありません。
    <% end %>
  </div>
</div>