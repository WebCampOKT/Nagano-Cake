<div class="container mb-5">
  <h4 class="my-4"><span style="background: #FFEBD2;">注文履歴一覧</span></h4>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle">
                〒<%= order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %>
              </td>
              <td class="align-middle">
                <ul class="list-unstyled">
                  <% order.order_details.each do |order_details| %>
                    <li class="list"><%= order_details.item.name %></li>
                  <% end %>
                </ul>
              </td>
              <td class="align-middle"><%= order.total_price.to_s(:delimited) %>円</td>
              <td class="align-middle"><%= order.status %></td>
              <td class="align-middle"><%= link_to '注文詳細へ', order_path(order.id), class: 'btn btn-info' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>