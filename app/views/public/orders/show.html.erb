<div class="container mb-5">
  <h4 class="my-4"><span style="background: #FFEBD2;">注文履歴詳細</span></h4>
  <div class="row">
    <div class="col-md-7">
      <p><strong>注文情報</strong></p>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <p><strong>請求情報</strong></p>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td>¥<%= (@order.total_price - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>¥<%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td>¥<%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <p><strong>注文内容</strong></p>
      <table class="table table-bordered">
        <tr>
          <th class="w-50">商品</th>
          <th class="w-25">単価（税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order_details.each do |order_details| %>
          <tr>
            <td><%= order_details.item.name %></td>
            <td><%= order_details.item.add_tax_price %></td>
            <td><%= order_details.quantity %></td>
            <td><%= order_details.item.add_tax_price * order_details.quantity %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>