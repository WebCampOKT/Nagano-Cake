<div class="container">
  <h4 class="my-4">注文履歴詳細</h4>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td>¥<%= (@order.total_price - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>¥<%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td>¥<%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="active col-xs-6">商品</th>
            <th class="active">単価（税込）</th>
            <th class="active">個数</th>
            <th class="active">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td>¥<%= (order_detail.item.price * @tax).floor.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td>¥<%= (order_detail.item.price * order_detail.quantity * @tax).floor.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>