<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.total_price - @order.shipping_cost).to_i %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered">
          <tr>
            <th>商品</th>
            <th>単価（税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <tr>
            <td>ショートケーキ</td>
            <td>1200</td>
            <td>2</td>
            <td>2400</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>